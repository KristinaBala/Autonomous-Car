int motorRight  = 5 ;
int motorLeft   = 6 ;
int sensorRight = 7 ;
int sensorLeft  = 8 ;
int sensorRightValue ;
int sensorLeftValue ;

void checkSensors()
{
sensorRightValue = digitalREAD(7);
sensorLeftValue = digitalREAD(8);
}


void setup()
{
pinMode(motorRight  ,OUTPUT) ;
pinMode(motorLeft   ,OUTPUT) ;
pinMode(sensorRight ,INPUT)  ;
pinMode(sensorLeft  ,INPUT)  ;
}

void loop()
{
checkSensors(); 

  if(sensorRightValue==0 && sensorLeftValue==0){
     
     digitalWrite(motorRight,HIGH);
     digitalWrite(motorLeft,HIGH);
  }
  
  else if(sensorRightValue==1 && sensorLeftValue==0){
    
    digitalWrite(motorLeft,LOW);
    digitalWrite(motorRight,HIGH);
    
  }
 
  else if(sensorRightValue==0 && sensorLeftValue==1){
  
    digitalWrite(motorRight,LOW); 
    digitalWrite(motorLeft,HIGH); 
    
  }
 
}


